import json

file_in = open("termos_traduzidos.txt", "r", encoding="utf-8")
linhas = file_in.readlines()
file_in.close()
traducoes = {}
for linha in linhas:
	key, value = linha.split(" @ ")
      traducoes[key] = value

file_in = open("textinho.json", "r", encoding="utf-8")
dicio = json.load(file_in)
file_in.close()

new_dici = {}

for designation, description in dicio.items():
    new_dici[designation] = {
        "des": description,
        "en": traducoes.get(designation,"Não tem a tradução no documento")
    }

file_out = open("dicionario_traducao.json", "w", encoding="utf-8")
json.dump(new_dici, file_out, ensure_ascii=False, indent=4)
